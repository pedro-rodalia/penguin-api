head
  link(rel="stylesheet", href="/validate.css", data-inline)
  link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;500;700&display=swap" rel="stylesheet")

body
  table(style="width:100%;border:0px;border-collapse:collapse;border-spacing:0;background-color:#F7F7F7;font-family:Roboto,Avenir,Helvetica,sans-serif;font-weight:400;height:100%;margin:0px")
    tbody
      tr
        td(style="padding:2rem;")
          div(style="max-width:512px;margin:0 auto")
            table(style="padding:1rem 0;background-color:#FFFFFF;border:1px solid #F3F3F3")
              tbody
                tr
                  td(style="padding:1rem 2rem;font-size:2rem;font-weight:500;") Hi there, #{username}!
                tr
                  td(style="padding:0.5rem 2rem;font-size:1rem;font-weight:100;") Welcome to your penguin account! You can now start using your favourite apps.
                tr
                  td(style="padding:0.5rem 2rem;font-size:1rem;font-weight:100;") Although this is not mandatory, some features might be disabled until you validate your account. Please do so using this code!
                tr
                  td(style="padding:1rem 2rem 2rem 1rem;text-align:center;font-size:2rem;font-weight:500;letter-spacing:5px;") #{code}
